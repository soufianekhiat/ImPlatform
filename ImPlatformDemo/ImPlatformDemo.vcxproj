    <ProjectConfiguration Include="Win32_DX9|x64">
      <Configuration>Win32_DX9</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Win32_DX10|x64">
      <Configuration>Win32_DX10</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Win32_DX11|x64">
