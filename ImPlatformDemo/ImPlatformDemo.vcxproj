    <!-- GLFW Configurations -->
    <ProjectConfiguration Include="GLFW_OpenGL3|x64">
      <Configuration>GLFW_OpenGL3</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="GLFW_Vulkan|x64">
